<div class='row mt-5'>
  <div class='col-md-6 m-auto'>
    <div class='card card-body'>
      <h1 class='text-center mt-3'>更改密碼</h1>
      {{> message}}
      <form action='/users/changePassword?_method=PUT' method='POST'>
        <div class='form-group mb-3'>
          <label for='password'>舊密碼</label>
          <input type='password' id='oldPassword' name='oldPassword' class='form-control' placeholder='請輸入舊密碼' {{!--
            pattern='(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}' title='密碼至少爲 8 碼，且必須包含至少 1 個數字，1 個大寫字母和 1 個小寫字母' --}}
            value='{{oldPassword}}' required />
        </div>
        <div class='form-group mb-3'>
          <label for='password'>新密碼</label>
          <input type='password' id='newPassword' name='newPassword' class='form-control' placeholder='請輸入密碼至少爲 8 碼'
            {{!-- pattern='(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}' title='密碼至少爲 8 碼，且必須包含至少 1 個數字，1 個大寫字母和 1 個小寫字母' --}}
            value='{{newPassword}}' required />
        </div>
        <div class='form-group mb-4'>
          <label for='confirmPassword'>確認新密碼</label>
          <input type='password' id='confirmNewPassword' name='confirmNewPassword' class='form-control'
            placeholder='請輸入確認密碼' {{!-- pattern='(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}'
            title='密碼至少爲 8 碼，且必須包含至少 1 個數字，1 個大寫字母和 1 個小寫字母' --}} value='{{confirmNewPassword}}' required />
        </div>
        <div class='d-grid gap-2'>
          <button type='submit' class='btn btn-primary btn-block col-3 mx-auto'>確認更改密碼</button>
        </div>
      </form>
    </div>
  </div>
</div>