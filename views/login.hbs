<div class='row mt-5'>
  <div class='col-md-6 m-auto'>
    <div class='card card-body'>
      <h1 class='text-center mt-3'>登入</h1>
      {{> message}}
      <form action='/users/login' method='POST'>
        <div class='form-group mb-3'>
          <label for='email'>帳號</label>
          <input type='email' id='email' name='email' class='form-control' placeholder='請輸入 Email' value="{{email}}"
            required />
        </div>
        <div class='form-group mb-4'>
          <label for='password'>密碼</label>
          <input type='password' id='password' name='password' class='form-control' placeholder='請輸入 Password'
            value="{{password}}" required />
        </div>
        <div class='d-grid gap-2'>
          <button type='submit' class='btn btn-primary btn-block'>登入</button>
          <a class='btn btn-info btn-block' href='/auth/facebook'>Facebook</a>
          <a class='btn btn-secondary btn-block' href='/auth/google'>Google</a>
        </div>
      </form>
      <p class='lead mt-4'>
      <div class="row d-flex">
        <div class="col">
          無帳號？
          <a href='/users/register'>註冊</a>
        </div>
        <div class="col text-end">
          <a href='/users/forgetPassword' style="color: red;">忘記密碼</a>
        </div>
      </div>
      </p>
    </div>
  </div>
</div>