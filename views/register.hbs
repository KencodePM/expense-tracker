<div class='row mt-5'>
  <div class='col-md-6 m-auto'>
    <div class='card card-body'>
      <h1 class='text-center mt-3'>註冊</h1>
      {{> message}}
      <form action='/users/register' method='POST'>
        <div class='form-group mb-3'>
          <label for='name'>姓名</label>
          <input type='text' id='name' name='name' class='form-control' placeholder='請輸入姓名' value='{{name}}' required />
        </div>
        <div class='form-group mb-3'>
          <label for='email'>信箱</label>
          <input type='email' id='email' name='email' class='form-control' placeholder='請輸入 email' value='{{email}}'
            required />
        </div>
        <div class='form-group mb-3'>
          <label for='password'>密碼</label>
          <input type='password' id='password' name='password' class='form-control' placeholder='請輸入密碼至少爲 8 碼' {{!--
            pattern='(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}' title='密碼至少爲 8 碼，且必須包含至少 1 個數字，1 個大寫字母和 1 個小寫字母' --}}
            value='{{password}}' required />
        </div>
        <div class='form-group mb-4'>
          <label for='confirmPassword'>確認密碼</label>
          <input type='password' id='confirmPassword' name='confirmPassword' class='form-control' placeholder='請輸入確認密碼'
            {{!-- pattern='(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}' title='密碼至少爲 8 碼，且必須包含至少 1 個數字，1 個大寫字母和 1 個小寫字母' --}}
            value='{{confirmPassword}}' required />
        </div>
        <div class='d-grid gap-2'>
          <button type='submit' class='btn btn-primary btn-block'>註冊</button>
          <a class='btn btn-info btn-block' href='/auth/facebook'>Facebook</a>
          <a class='btn btn-secondary btn-block' href='/auth/google'>Google</a>
        </div>
      </form>
      <p class='lead mt-4'>
      <div class="row d-flex">
        <div class="col">
          已有帳號？
          <a href='/users/login'>登入</a>
        </div>
        <div class="col text-end">
          <a href='/users/forgetPassword' style="color: red;">忘記密碼</a>
        </div>
      </div>
      </p>
    </div>
  </div>
</div>